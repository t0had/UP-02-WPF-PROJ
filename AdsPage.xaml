<Page x:Class="Goman_WPF_PROJ_UP02.AdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Goman_WPF_PROJ_UP02"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="900"
      Title="AdsPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dictionary1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Город"/>
            <ComboBox x:Name="CityCheck" SelectedItem="{Binding Cities}" DisplayMemberPath="Name" SelectionChanged="CmbCheck_SelectionChanged" IsEditable="True"/>
            <TextBlock Text="Категория"/>
            <ComboBox x:Name="CategoryCheck" SelectedItem="{Binding Categories}" DisplayMemberPath="Name" SelectionChanged="CmbCheck_SelectionChanged" IsEditable="True"/>
            <TextBlock Text="Тип"/>
            <ComboBox x:Name="TypeCheck" SelectedItem="{Binding Ad_types}" DisplayMemberPath="Name" SelectionChanged="CmbCheck_SelectionChanged" IsEditable="True"/>
            <TextBlock Text="Статус"/>
            <ComboBox x:Name="StatusCheck" SelectedItem="{Binding Ad_statuses}" DisplayMemberPath="Name" SelectionChanged="CmbCheck_SelectionChanged" IsEditable="True"/>
            <Button x:Name="ButtonClearFilter" Content="Очистить фильтр" Width="130" Height="25" Margin="10,0,0,0" Click="ButtonClearFilter_Click"/>
        </StackPanel>
        
        <DataGrid x:Name="DataGridAds" IsReadOnly="True" AutoGenerateColumns="False" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding Users.User_login}"></DataGridTextColumn>
                <DataGridTextColumn Header="Заголовок" Binding="{Binding Ad_title}"></DataGridTextColumn>
                <DataGridTextColumn Header="Описание" Binding="{Binding Ad_description}"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата" Binding="{Binding Ad_post_date}"></DataGridTextColumn>
                <DataGridTextColumn Header="Город" Binding="{Binding Cities.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Категория" Binding="{Binding Categories.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Тип" Binding="{Binding Ad_Types.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Статус" Binding="{Binding Ad_Statuses.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding Price}"></DataGridTextColumn>
                <DataGridTemplateColumn Header="Фотография">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Stretch="Uniform" Width="75" RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Source>
                                    <Binding Path="PhotoPath">
                                        <Binding.TargetNullValue>
                                            <ImageSource>/Logo.png</ImageSource>
                                        </Binding.TargetNullValue>
                                        <Binding.FallbackValue>
                                            <ImageSource>/Logo.png</ImageSource>
                                        </Binding.FallbackValue>
                                    </Binding>
                                </Image.Source>
                            </Image>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
