<Page x:Class="Goman_WPF_PROJ_UP02.AdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Goman_WPF_PROJ_UP02"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200" IsVisibleChanged="Page_IsVisibleChanged"
      Title="AdsPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Dictionary1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*"/>
            <RowDefinition Height="0.25*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="BtnHistory" Content="Моя прибыль" 
            Click="BtnHistory_Click" 
            Width="140" 
            Background="#78909C" 
            Margin="16,0,0,0"/>


            <Button x:Name="BtnAdd" Content="Добавить" Click="BtnAdd_Click"/>
            <Button x:Name="BtnDelete" Content="Удалить" Click="BtnDelete_Click" Background="#FF5252"/>
            <Button x:Name="BtnEdit" Content="Редактировать" Click="BtnEdit_Click"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1">
            <TextBlock Text="Город"/>
            <ComboBox x:Name="CityCheck" SelectedItem="{Binding Cities}" DisplayMemberPath="Name" SelectionChanged="CmbCheck_SelectionChanged" IsEditable="True"/>
            <TextBlock Text="Категория"/>
            <ComboBox x:Name="CategoryCheck" SelectedItem="{Binding Categories}" DisplayMemberPath="Name" SelectionChanged="CmbCheck_SelectionChanged" IsEditable="True"/>
            <TextBlock Text="Тип"/>
            <ComboBox x:Name="TypeCheck" SelectedItem="{Binding Ad_types}" DisplayMemberPath="Name" SelectionChanged="CmbCheck_SelectionChanged" IsEditable="True"/>
            <TextBlock Text="Статус"/>
            <ComboBox x:Name="StatusCheck" SelectedItem="{Binding Ad_statuses}" DisplayMemberPath="Name" SelectionChanged="CmbCheck_SelectionChanged" IsEditable="True"/>
            <Button x:Name="ButtonClearFilter" Content="Очистить фильтр" Click="ButtonClearFilter_Click"/>
        </StackPanel>

        <DataGrid x:Name="DataGridAds" IsReadOnly="True" AutoGenerateColumns="False" Grid.Row="2">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Пользователь" Binding="{Binding Users.User_login}"></DataGridTextColumn>
                <DataGridTextColumn Header="Заголовок" Binding="{Binding Ad_title}"></DataGridTextColumn>
                <DataGridTextColumn Header="Описание" Binding="{Binding Ad_description}"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата" Binding="{Binding Ad_post_date}"></DataGridTextColumn>
                <DataGridTextColumn Header="Город" Binding="{Binding Cities.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Категория" Binding="{Binding Categories.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Тип" Binding="{Binding Ad_Types.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Статус" Binding="{Binding Ad_Statuses.Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Стоимость" Binding="{Binding Price}"></DataGridTextColumn>
                <DataGridTemplateColumn Header="Фотография" Width="100">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <!-- Убираем Source из тега Image -->
                            <Image Width="80" Height="60" 
                   Stretch="Uniform"
                   RenderOptions.BitmapScalingMode="HighQuality">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <!-- 1. По умолчанию (Setter) биндим на фото из базы -->
                                        <Setter Property="Source" Value="{Binding Ad_photo}"/>

                                        <!-- 2. Триггер: Если фото нет (null), ставим заглушку -->
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Ad_photo}" Value="{x:Null}">
                                                <Setter Property="Source" Value="/Logo.png"/>
                                                <!-- Путь к вашей картинке-заглушке -->
                                            </DataTrigger>
                                            <!-- Дополнительно: если массив пустой (Length=0), но не null (иногда бывает) -->
                                            <!-- Это требует конвертера, но для базового случая null достаточно -->
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
