<Page x:Class="Goman_WPF_PROJ_UP02.CompletedAdsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Goman_WPF_PROJ_UP02"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000"
      Title="Завершенные объявления"
      Background="White">

    <Page.Resources>
        <ResourceDictionary Source="/Dictionary1.xaml"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="16">
            <Image Source="/Logo.png" Height="50" Width="50" Margin="0,0,16,0" RenderOptions.BitmapScalingMode="HighQuality"/>

            <TextBlock Text="Завершенные объявления" Margin="0"/>
        </StackPanel>

        <DataGrid x:Name="DataGridCompleted" 
                  Grid.Row="1" 
                  IsReadOnly="True" 
                  AutoGenerateColumns="False" 
                  Margin="16,0,16,16">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Заголовок" Binding="{Binding Ad_title}" Width="*"/>
                <DataGridTextColumn Header="Категория" Binding="{Binding Categories.Name}" Width="150"/>
                <DataGridTextColumn Header="Дата закрытия" Binding="{Binding Ad_post_date, StringFormat=dd.MM.yyyy}" Width="120"/>
                <DataGridTextColumn Header="Прибыль (руб.)" Binding="{Binding Price, StringFormat=N2}" Width="150" FontWeight="Bold"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="2" 
                BorderBrush="#E0E0E0" 
                BorderThickness="0,1,0,0" 
                Padding="16" 
                Background="#F9F9F9">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Content="Назад к списку" 
                        Click="BtnBack_Click" 
                        HorizontalAlignment="Left" 
                        Background="#78909C" 
                        Width="150"
                        Margin="0"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Итоговая прибыль:" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               VerticalAlignment="Center"/>

                    <TextBlock x:Name="TxtTotalSum" 
                               Text="0,00 ₽" 
                               FontSize="24" 
                               FontWeight="Bold" 
                               Margin="16,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
